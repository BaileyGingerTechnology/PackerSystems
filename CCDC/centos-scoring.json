      "shutdown_command": "echo 'password' | sudo /sbin/halt -h -p",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "communicator": "ssh",
      "boot_command": [
              "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-ks.cfg<enter><wait>"
