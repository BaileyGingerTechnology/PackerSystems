{
  "variables": {
    "cpus": "1",
    "memory": "2048",
    "disk_size": "8192",
    "build_num": "1.0"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "iso_urls": [ "http://mirror.compevo.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso", "http://centos.den.host-engine.com/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso", "http://mirror.hackingand.coffee/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso" ],
