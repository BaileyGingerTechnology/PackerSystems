{
  "variables": {
    "iso_url": "https://mirrors.edge.kernel.org/archlinux/iso/2019.02.01/archlinux-2019.02.01-x86_64.iso",
    "iso_checksum": "https://mirrors.edge.kernel.org/archlinux/iso/2019.02.01/sha1sums.txt",
    "iso_checksum_type": "sha1",
    "ssh_timeout": "20m",
    "country": "US",
    "headless": "false",
    "build_num": "1.0",
    "vmname": "Arditi",
    "cpus": "2",
    "memory": "4096"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 20480,
      "hard_drive_interface": "sata",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "headless": "{{ user `headless`}}",
      "output_directory": "Builds/virtualbox/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_url": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory": "http",
      "boot_wait": "10s",
      "tools_upload_flavor": "linux",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 20480,
      "ssh_username": "administrator",
      "ssh_password": "password",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "headless": "{{ user `headless`}}",
      "output_directory": "Builds/vmware/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      }
    },
    {
      "type": "qemu",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_url": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory": "http",
      "boot_wait": "1m",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 20480,
      "ssh_username": "administrator",
      "ssh_password": "password",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "headless": "{{ user `headless`}}",
      "output_directory": "Builds/qemu/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} COUNTRY={{ user `country` }} sudo -E -S bash '{{ .Path }}'",
      "expect_disconnect": true,
      "script": "scripts/arch/install-base.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "scripts/arch/install-virtualbox.sh",
        "scripts/arch/install-vmware.sh",
        "scripts/arch/install-qemu.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "inline": [
        "sh -c \"$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)\""
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo password | chsh -s /usr/bin/zsh"
      ]
    },
    {
      "type": "file",
      "source": "files/Linux/Arch-Scoring/dhcpcd.conf",
      "destination": "/home/administrator/dhcpcd.conf"
    },
    {
      "type": "file",
      "source": "files/Linux/Arch-Scoring/ScoringEngine.pkg.tar.xz",
      "destination": "/tmp/ScoringEngine.pkg.tar.xz"
    },
    {
      "type": "file",
      "source": "files/Linux/Arch-Scoring/nginx.conf",
      "destination": "/tmp/nginx.conf"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "scripts/arch/arch-scoring.sh",
        "scripts/arch/cleanup.sh"
      ]
    }
  ]
}