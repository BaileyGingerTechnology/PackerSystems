{
  "variables": {
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "http://ftp.riken.go.jp/Linux/debian/debian-cdimage/archive/latest-oldstable/amd64/iso-cd/SHA256SUMS",
    "iso_checksum_type": "sha256",
    "memory": "1024",
    "mirror": "http://ftp.riken.go.jp/Linux/debian/debian-cdimage/archive/latest-oldstable/amd64/iso-cd/debian-8.9.0-amd64-netinst.iso",
    "ssh_timeout": "60m",
    "build_num": "1.0",
    "vmname": "Tuna"
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "{{user `mirror`}}",
      "iso_checksum_url": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "shutdown_command": "sudo systemctl poweroff",
      "qemuargs": [
        ["-m", "{{user `memory`}}"],
        ["-smp", "{{user `cpus`}}"]
      ]
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "iso_url": "{{user `mirror`}}",
      "iso_checksum_url": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "debian8-64",
      "iso_url": "{{user `mirror`}}",
      "iso_checksum_url": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "tools_upload_flavor": "linux",
      "shutdown_command": "sudo systemctl poweroff",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      }
    },
    {
      "type": "vmware-iso",
      "name": "vmware-rem",
      "guest_os_type": "debian8-64",
      "iso_url": "{{user `mirror`}}",
      "iso_checksum": "dee715466ebfdc21ad9ef8bbe80a048bacf2d85a231b724315c8b1291922da5363a431da4ce16c0298b81bf7579120c7dfa9dcecf53419714c0e8c84c5878a52",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "tools_upload_flavor": "linux",
      "shutdown_command": "sudo systemctl poweroff",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },
      "remote_type": "esx5",
      "remote_host": "{{user `esxi_host`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "keep_registered": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": "scripts/debian/virtualbox.sh",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "scripts": "scripts/debian/vmware.sh",
      "only": ["vmware-iso","vmware-rem"]
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "inline": "sudo reboot"
    },
    {
      "type": "file",
      "source": "files/pacman.conf",
      "destination": "/home/administrator/"
    },
    {
      "type": "file",
      "source": "files/debianPKGBUILD",
      "destination": "/home/administrator/"
    },
    {
      "type": "file",
      "source": "files/tuna.png",
      "destination": "/home/administrator/Pictures/tuna.png"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/debian/debian-workstation.sh",
        "scripts/debian/cleanup.sh"
      ]
    }
  ]
}
